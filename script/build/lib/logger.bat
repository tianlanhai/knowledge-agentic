@echo off
REM ============================================================================
# 知识库智能体 - 日志输出函数库
# File    : lib/logger.bat
# Purpose : 提供统一的日志格式输出
# Usage   : call "%~f0" <command> [args...]
# ============================================================================

REM ============================================================================
# 命令分发
# ============================================================================
if /I "%~1"=="info" goto :info
if /I "%~1"=="success" goto :success
if /I "%~1"=="warn" goto :warn
if /I "%~1"=="error" goto :error
if /I "%~1"=="print_separator" goto :print_separator

echo [ERROR] Unknown command: %~1
exit /b 1

REM ============================================================================
# info - 输出信息日志
# 参数: %2 = 日志内容
# ============================================================================
:info
echo [INFO] %~2
exit /b 0

REM ============================================================================
# success - 输出成功日志
# 参数: %2 = 日志内容
# ============================================================================
:success
echo [SUCCESS] %~2
exit /b 0

REM ============================================================================
# warn - 输出警告日志
# 参数: %2 = 日志内容
# ============================================================================
:warn
echo [WARN] %~2
exit /b 0

REM ============================================================================
# error - 输出错误日志
# 参数: %2 = 日志内容
# ============================================================================
:error
echo [ERROR] %~2
exit /b 0

REM ============================================================================
# print_separator - 打印分隔线
# 参数: %2 = 标题（可选）
# ============================================================================
:print_separator
echo.
echo ========================================
if not "%~2"=="" echo   %~2
if not "%~2"=="" echo ========================================
exit /b 0

REM ============================================================================
# End of file
# ============================================================================
