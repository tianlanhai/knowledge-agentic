# ============================================================================
# 知识库智能体 - 基础环境配置
# File    : configs/base.env
# Purpose : 所有版本共享的基础配置
# ============================================================================

# ----------------------------------------------------------------------------
# 应用基础配置
# ----------------------------------------------------------------------------
APP_NAME=Knowledge-Agentic
APP_VERSION=1.0.0
API_V1_STR=/api/v1
PORT=8010
LOG_LEVEL=INFO
TIMEZONE=Asia/Shanghai

# ----------------------------------------------------------------------------
# 数据库配置
# ----------------------------------------------------------------------------
DATABASE_PROVIDER=postgresql
DB_HOST=${DB_HOST:-host.docker.internal}
DB_PORT=${DB_PORT:-15432}
DB_NAME=${DB_NAME:-knowledge_db}
DB_USER=${DB_USER:-postgres}
DB_PASSWORD=${DB_PASSWORD:-test}

# SQLite备选配置（取消注释以使用）
# SQLITE_DB_PATH=./data/metadata.db

# ----------------------------------------------------------------------------
# 向量数据库配置
# ----------------------------------------------------------------------------
CHROMA_DB_PATH=./data/chroma_db
CHROMA_COLLECTION_NAME=knowledge_base

# ----------------------------------------------------------------------------
# 文件存储配置
# ----------------------------------------------------------------------------
UPLOAD_FILES_PATH=./data/files

# ----------------------------------------------------------------------------
# 敏感信息过滤配置
# ----------------------------------------------------------------------------
ENABLE_SENSITIVE_DATA_FILTER=True
SENSITIVE_DATA_MASK_STRATEGY=full
FILTER_MOBILE=True
FILTER_EMAIL=True
